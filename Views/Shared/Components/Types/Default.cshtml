@{
}
@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-pageNum="" class="btn btn-outline-secondary">Home</a>

    @foreach (string t in Model)
        {
            <a asp-controller="Home" asp-action="Index" asp-route-bookType="@t"
               class="btn @(ViewBag.SelectedType == t ? "btn-secondary": "btn-outline-secondary")">@t</a>
        }
</div>